{% extends 'base.html.twig' %}

{% block body %}
    <h1>Chambre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ chambre.id }}</td>
            </tr>
            <tr>
                <th>Cap</th>
                <td>{{ chambre.cap }}</td>
            </tr>
            <tr>
                <th>Expo</th>
                <td>{{ chambre.expo }}</td>
            </tr>
            <tr>
                <th>Douche</th>
                <td>{{ chambre.douche }}</td>
            </tr>
            <tr>
                <th>Wc</th>
                <td>{{ chambre.wc }}</td>
            </tr>
            <tr>
                <th>Bain</th>
                <td>{{ chambre.bain }}</td>
            </tr>
            <tr>
                <th>Etage</th>
                <td>{{ chambre.etage }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('chambre_index') }}">Back to the list</a>
        </li>
        {% if is_granted('ROLE_ADMIN') %}
        <li>
            <a href="{{ path('chambre_edit', { 'id': chambre.id }) }}">Edit</a>
        </li>
        {% endif %}
        <li>
            <a href="{{ path('reservation_new' , {'id': chambre.id}) }}">Reserver</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
